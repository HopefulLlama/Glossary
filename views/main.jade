doctype
html
  head
    title #{title}
    script(type='text/javascript', src='./lib/jquery-2.1.1.min.js')
    script(type='text/javascript', src='./lib/bootstrap-3.3.0-dist/js/bootstrap.min.js')
    script(type='text/javascript', src='./lib/angular.min.js')

    link(rel='stylesheet', href='./lib/bootstrap-3.3.0-dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='./lib/bootstrap-3.3.0-dist/css/bootstrap-theme.min.css')

    if debug
      script(type='text/javascript', src='./src/js/ui-handler.js')
      link(rel='stylesheet', href='./src/css/style.css')
    else 
      script(type='text/javascript', src='./dist/js/output.min.js')    
      link(rel='stylesheet', href='./dist/css/output.min.css')

    link(rel='icon'
      type='image/png'
      href='./assets/img/favicon.crush.png')

    meta(name='viewport'
      content="width=device-width"
      initial-scale=1
      maximum-scale=1,
      user-scalable=no)

  body(data-ng-app="cardApp", data-ng-controller="cardController")
    div(class="modal fade add-card-modal", tabindex="-1", role="dialog", aria-labelledby="add-card-modal", aria-hidden="true")
      .modal-dialog.modal-sm
        .modal-content
          .modal-header
            button(type="button", class="close", data-dismiss="modal")
              span(aria-hidden="true") &times;
              span(class="sr-only") Close
            h4(class="modal-title", id="card-modal-label") New Card Details
          .modal-body
            form(role="form")
              .form-group
                label(for="input-card-title") Title
                  input(type="text", class="form-control", id="input-card-title", placeholder="Title...")
              .form-group
                label(for="input-card-description") Description
                  textarea(class="form-control", id="input-card-description", placeholder="Description...")
              .form-group
                label(for="input-card-tags") Tags
                  input(type="text", class="form-control", id="input-card-tags", placeholder="Tag1, Tag2, TagN, Tag...")
          .modal-footer
            button(type="button", class="btn btn-default", data-dismiss="modal") Close
            button(type="button", class="btn btn-primary", data-ng-click="addCard()") Add Card

    nav(class="navbar navbar-default", role="navigation")
      .container
        .navbar-header
          a(class="navbar-brand", href="#") #{title}
        form(class="navbar-form navbar-left")
          .form-group
            input(id="filter", class="textbox", type="text", placeholder="Filter...") 
          button(id='addCard', class='btn btn-primary', type='button', data-toggle="modal", data-target=".add-card-modal") Add Card
    .container
      #cardField
        .row
          div(class='col-xs-6 col-md-4', data-ng-repeat="card in parsedJSON.cards")
            .panel.panel-default 
              .panel-heading {{card.title}}
              .panel-body {{card.desc}}
              .panel-footer 
                span(class="label label-primary", data-ng-repeat="tag in card.tags") {{tag}}